<main class="container-fluid">
  <div class="container">
    <div class="main_row row">
      <div class="main_wrapper">
        <div class="box_base">
          <p class="edit_header">日記を編集する</p>
          <% if @blog.image.url %>
            <p class="edit_image_text">投稿されたイメージ:</p>
            <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
          <% end %>

          <%= render 'form', blog: @blog %>

          <p class="edit_back"><%= link_to '戻る', blogs_path %></p>
        </div>
      </div>
    </div>
  </div>
</main>
